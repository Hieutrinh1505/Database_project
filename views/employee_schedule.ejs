<html>
    <head>
        <title>Employee Schedule</title>
         <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
              <div class="navbar-header">
                <a class="navbar-brand">Team 7 Medical Clinic Database</a>
              </div>
              <ul class="nav navbar-nav">
                <li><a href="/auth">Patient Login / Signup</a></li>
                <li><a href="/employeeauth">Employee Login</a></li>
                <li class="active"><a href="/dhome">Home</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          </nav>

          <div class="container">
            <div class="row">
              <h1>Schedule: Upcoming Appointments</h1><br>
              <table style="width:100%" id="table">
                <tr>
                  <th>Appointment ID</th>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Reason</th>
                  <th>Patient ID</th>
                  <th>Doctor ID</th>
                  <th>Location</th>
                </tr>
                <% for(var x=0; x<userdata.length; x++) { %>
                <tr>
                  <td><%= userdata[x].apointment_ID %></td>
                  <td><%= userdata[x].Date %></td>
                  <td><%= userdata[x].Time %></td>
                  <td><%= userdata[x].apointment_reason %></td>
                  <td><%= userdata[x].patient_ID %></td>
                  <td><%= userdata[x].doctor_ID %></td>
                  <td><%= userdata[x].office_ID %></td>
                </tr>
                <% } %>
              </table><br><br><br>
            </div>
          </div>
          
        
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <form action="/dappointment" method="POST">
                            <h1>Cancel Appointment</h1><br>
                            <label for="cancelappointment">Select Appointment:</label><br>
                            <input type="text" id="choosepatientID" name="id" placeholder="Enter Appointment ID" required><br><br>
                            <input type="submit" value="Submit">
                        </form>
                    </div>
                </div>
            </div>

    </body>

</html>