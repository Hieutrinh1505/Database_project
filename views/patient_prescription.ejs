<html>
    <head>
        <title>Patient Prescription</title>
         <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> 

    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
              <div class="navbar-header">
                <a class="navbar-brand">Team 7 Medical Clinic Database</a>
              </div>
              <ul class="nav navbar-nav">
                <li><a href="/auth">Patient Login / Signup</a></li>
                <li><a href="/employeeauth">Employee Login</a></li>
                <li class="active"><a href="/home">Home</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          </nav>

          <div class="container">
            <div class="row">
              <h1>Prescription(s)</h1><br>
            </div>
          <table style="width:100%">
            <tr>
              <th>Prescription ID</th>
              <th>Medicine For </th>
              <th>Prescribed by Doctor</th>
              <th>Patient Name</th>
              <th>Date Prescribed</th>
              <th>Time Prescribed </th>
              
            </tr>
            <% for(var x=0; x<userdata.length; x++) { %>
              <tr>
                <td><%= userdata[x].idPrescription %></td>
                <td><%= userdata[x].Medicine_Name %></td>
                <td><%= userdata[x].doctorname %></td>
                <td><%= userdata[x].patientname %></td>
                <td><%= userdata[x].date_prescribed %></td>
                <td><%= userdata[x].time_prescribed %></td>
               
              </tr>
            <% } %>
          </table><br><br><br>

    </body>

</html>