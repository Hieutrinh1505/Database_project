<html>
    <head>
        <title>Employee Summary / Note</title>
         <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    </head>
    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
              <div class="navbar-header">
                <a class="navbar-brand">Team 7 Medical Clinic Database</a>
              </div>
              <ul class="nav navbar-nav">
                <li><a href="/auth">Patient Login / Signup</a></li>
                <li><a href="/employeeauth">Employee Login</a></li>
                <li class="active"><a href="/dhome">Home</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          </nav>

          <div class="container">
            <div class="row">
              <h1>Summary: Previous Appointments</h1><br>
            </div>
          </div>
          <table style="width:100%">
            <tr>
              <th>Patient ID</th>
              <th>Location</th>
              <th>Date</th>
              <th>Doctor</th>
              <th>Blood Pressure</th>
              <th>Weight</th>
              <th>Temperature</th>
              <th>Patient Input</th>
              <th>Diagnosis</th>
              <th>Doctor's Notes</th>
              
            </tr>
            <% for(var x=0; x<userdata.length; x++) { %>
              <tr>
                <td><%= userdata[x].patient_ID %></td>
                <td><%= userdata[x].updated_In_Office %></td>
                <td><%= userdata[x].date %></td>
                <td><%= userdata[x].updated_By_Doctor_ID %></td>
                <td><%= userdata[x].blood_pressure %></td>
                <td><%= userdata[x].weight_lb %></td>
                <td><%= userdata[x].temperature_F %></td>
                <td><%= userdata[x].patient_input %></td>
                <td><%= userdata[x].diagnosis_ID %></td>
                <td><%= userdata[x].doctors_notes %></td>
                
              </tr>
              <% } %>
            
          </table><br><br><br>
        
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <form action="/notes" method = "POST">
                            <h1>Create Patient Record</h1>
                            <label for="choosepatientID">Choose Patient ID:</label><br>
                            <input type="text" id="choosepatientID" name="patientID" placeholder="Enter Patient ID" required><br>

                            <label for="location">Location ID:</label><br>
                            <input type="text" id="location" name="location" placeholder="Enter Location ID" required><br>
              
                            <label for="bloodpressure">Blood Pressure:</label><br>
                            <input type="text" id="bloodpressure" name="blood" placeholder="Enter Blood Pressure" required><br>
              
                            <label for="weight">Weight:</label><br>
                            <input type="text" id="weight" name="weight" placeholder="Enter Weight" required><br>
                            
                            <label for="changephone">Temperature:</label><br>
                            <input type="text" id="changephone" name="temp" placeholder="Enter Temperature" required><br><br>
                            
                            
                            

                            <textarea name="pnote" rows="3" cols="30" placeholder="Enter Patient Notes" required></textarea><br><br>
                            
                            <textarea name="dnote" rows="3" cols="30" placeholder="Enter Your Notes" required></textarea><br>
                            <br>
              
                            <input type="submit" value="Submit">
                        </form>
                    </div>
                </div>
            </div>

    </body>

</html>